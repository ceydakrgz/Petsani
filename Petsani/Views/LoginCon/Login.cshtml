@model Petsani.Models.mUsers
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br>
<div class="jumbotron text-center">
    <h1>Üye Girişi</h1>

</div>
@using (Html.BeginForm())
{
    @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
}



<div class="container">
    <div class="row">
        <div class="col-md-3"></div>


        <div class="col-md-6    ">
            <div class="card card-login">
                <div class="card-heading">
                    <div class="row">
                        <div class="col-xl-2"></div>
                        <div class="col-xl-4">
                            <a href="#" class="active" id="login-form-link">Giriş</a>
                        </div>
                        <div class="col-xl-2"></div>
                        <div class="col-xl-4">
                            <a href="#" id="register-form-link">Kayıt</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" action="/LoginCon/Login" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    <input type="text" name="email" id="email" tabindex="1"
                                           class="form-control" placeholder="Kullanıcı Adı(E-Mail)" value="">
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="2"
                                           class="form-control" placeholder="Şifre">
                                </div>
                                <br>
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember"> Beni hatırla</label>
                                </div>
                                <br>
                                <div class="form-group text-center">
                                    <div class="row">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-6 col-sm-offset-3 text-center">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4"
                                                   class="form-control btn btn-login" value="Tamam">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <br>
                                            <div class="text-center">
                                                <a href="" tabindex="5" class="forgot-password">
                                                    Şifreyi
                                                    Unuttum
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <form id="register-form" action="/LoginSave/Save" method="post" role="form" style="display: none;">
                                <div class="form-group">
                                    <input type="text" name="Name" id="Name" tabindex="1"
                                           class="form-control" placeholder="İsim" value="">
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="text" name="LastName" id="LastName" tabindex="2"
                                           class="form-control" placeholder="Soyisim" value="">
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="3" class="form-control"
                                           placeholder="Email Adresi" value="">
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="4"
                                           class="form-control" placeholder="Şifre">
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="password" name="confirm-password" id="confirm-password"
                                           tabindex="5" class="form-control" placeholder="Şifre Tekrar">
                                </div>
                                <br>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit"
                                                   tabindex="4" class="form-control btn btn-register" value="Kaydet">
                                        </div>
                                    </div>
                                </div>

                            </form>
                            
                            

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3"></div>


    </div>

</div>


<br>
